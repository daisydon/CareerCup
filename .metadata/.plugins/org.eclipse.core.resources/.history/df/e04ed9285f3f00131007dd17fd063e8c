package chapter2;

class ListNode {
	int data;
	ListNode next;

	public ListNode(int data) {
		this.data = data;
		this.next = null;
	}
}

public class ReverseLinkedList {

	public ListNode ReverseNode(ListNode head, int m, int n) {
		if (m == n) {
			return head;
		}
		else{
			ListNode dummy = new ListNode(0);
			dummy.next = head;
			
			ListNode pre = dummy;
			for(int i = 1; i < m ; i++){
				pre = pre.next;
			}
			ListNode cur = pre.next;
			for(int i = m+1; i < n; i++){
				cur = cur.next;
			}
			//cur points the n node before reversal 
			ListNode firstReversed = pre;
		    ListNode secondReversed = cur;
            
		    System.out.print(secondReversed.next.data+",");
		    System.out.print(firstReversed.next.data);
		    
		    pre.next.data = secondReversed.next.data;
		    cur.next.data = firstReversed.next;
		    
		    //System.out.print(secondReversed.next.data+",");
		    //System.out.print(firstReversed.next.data);
		    	   
		    pre.next.next = firstReversed.next.next;
		    cur.next.next = secondReversed.next.next;
		   
		   
			return dummy.next;
			
		}
	}
}
